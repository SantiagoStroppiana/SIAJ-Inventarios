<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1"
            xmlns="http://javafx.com/javafx/17.0.12"
            fx:controller="org.example.desktop.controller.PasswordController"
            prefWidth="700.0" prefHeight="500.0"
            stylesheets="@estilos/login-register.css">

    <top>
        <HBox alignment="TOP_LEFT">
            <padding>
                <Insets top="15" right="15" bottom="10" left="15" />
            </padding>
            <Button fx:id="btnVolver" text="← Volver"
                    styleClass="primary-button"
                    onAction="#volver"
                    mnemonicParsing="false" />
        </HBox>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="25" styleClass="right-panel"
              prefHeight="500.0" prefWidth="400.0">
            <padding>
                <Insets top="50.0" right="40.0" bottom="50.0" left="40.0" />
            </padding>

            <Label text="Cambiar contraseña" styleClass="form-title" />

            <VBox spacing="20" maxWidth="320.0">

                <VBox fx:id="emailBox" spacing="8">
                    <Label fx:id="labelEmail" text="Email registrado" styleClass="field-label" />
                    <TextField fx:id="email" promptText="Ingrese el email registrado" styleClass="password-field" />
                </VBox>

                <VBox fx:id="oldPasswordBox" spacing="8">
                    <Label fx:id="labelOldPassword" text="Vieja Contraseña" styleClass="field-label" />
                    <TextField fx:id="oldPassword" promptText="Ingresa tu vieja contraseña" styleClass="password-field" />
                </VBox>

                <VBox fx:id="newPasswordBox" spacing="8">
                    <Label fx:id="labelNewPassword" text="Nueva Contraseña" styleClass="field-label" />
                    <TextField fx:id="newPassword" promptText="Ingresa tu nueva contraseña" styleClass="password-field" />
                </VBox>

                <VBox fx:id="repetirPasswordBox" spacing="8">
                    <Label fx:id="labelRepetirPassword" text="Repetir Contraseña" styleClass="field-label" />
                    <TextField fx:id="repetirPassword" promptText="Repetí la nueva contraseña" styleClass="password-field" />
                </VBox>

                <Button fx:id="btnCambiarPassword"
                        text="Actualizar nueva contraseña"
                        styleClass="primary-button"
                        prefHeight="45.0"
                        maxWidth="Infinity"
                        onAction="#cambiarPassword" />

                <Button fx:id="btnOlvidePassword"
                        text="Generar nueva contraseña"
                        styleClass="primary-button"
                        prefHeight="45.0"
                        maxWidth="Infinity"
                        onAction="#olvidePassword" />
            </VBox>
        </VBox>
    </center>

</BorderPane>
