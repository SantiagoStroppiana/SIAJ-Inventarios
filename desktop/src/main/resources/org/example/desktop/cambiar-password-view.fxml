<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1"
            xmlns="http://javafx.com/javafx/17.0.12"
            fx:controller="org.example.desktop.controller.PasswordController"
            prefWidth="700.0" prefHeight="500.0"
            stylesheets="@estilos/login-register.css">

    <top>
        <HBox alignment="TOP_LEFT">
            <padding>
                <Insets top="15" right="15" bottom="10" left="15" />
            </padding>
            <Button fx:id="btnVolver" text="← Volver"
                    styleClass="primary-button"
                    onAction="#volver"
                    mnemonicParsing="false" />
        </HBox>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="25" styleClass="right-panel"
              prefHeight="500.0" prefWidth="400.0">
            <padding>
                <Insets top="50.0" right="40.0" bottom="50.0" left="40.0" />
            </padding>

            <Label text="Cambiar contraseña" styleClass="form-title" />

            <VBox spacing="20" maxWidth="320.0">

                <VBox fx:id="olvideBox" spacing="15">
                    <VBox spacing="8">
                        <Label text="Email registrado" styleClass="field-label" />
                        <TextField fx:id="email" promptText="Ingrese el email registrado" styleClass="password-field" />
                    </VBox>

                    <VBox spacing="8">
                        <Label text="Nueva contraseña" styleClass="field-label" />
                        <PasswordField fx:id="nuevaPassword" promptText="Nueva contraseña" styleClass="password-field" />
                    </VBox>

                    <VBox spacing="8">
                        <Label text="Repetir contraseña" styleClass="field-label" />
                        <PasswordField fx:id="confirmarPassword" promptText="Repetir contraseña" styleClass="password-field" />
                    </VBox>

                    <Button fx:id="btnOlvidePassword"
                            text="Generar nueva contraseña"
                            styleClass="primary-button"
                            prefHeight="45.0"
                            maxWidth="Infinity"
                            onAction="#olvidePassword" />
                </VBox>

                <VBox fx:id="cambiarBox" spacing="15">
                    <VBox spacing="8">
                        <Label text="Contraseña actual" styleClass="field-label" />
                        <PasswordField fx:id="oldPassword" promptText="Contraseña actual" styleClass="password-field" />
                    </VBox>

                    <VBox spacing="8">
                        <Label text="Nueva contraseña" styleClass="field-label" />
                        <PasswordField fx:id="newPassword" promptText="Nueva contraseña" styleClass="password-field" />
                    </VBox>

                    <Button fx:id="btnCambiarPassword"
                            text="Actualizar nueva contraseña"
                            styleClass="primary-button"
                            prefHeight="45.0"
                            maxWidth="Infinity"
                            onAction="#cambiarPassword" />
                </VBox>

            </VBox>
        </VBox>
    </center>

</BorderPane>
