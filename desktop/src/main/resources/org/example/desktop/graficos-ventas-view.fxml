    <!-- Sidebar izquierdo (copiado de tus otras vistas) -->
    <left>
        <fx:include fx:id="sidebar" source="side-menu-view.fxml" />
    </left>

    <!-- Estilos -->
    <stylesheets>
        <URL value="@estilos/estilos-globales.css" />
        <URL value="@estilos/tabla.css" />
    </stylesheets>

    <!-- Contenido principal con el grÃ¡fico -->
