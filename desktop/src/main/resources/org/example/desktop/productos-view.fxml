<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SplitMenuButton?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="900.0" prefWidth="1600.0"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.desktop.controller.ProductoController">

    <left>
        <fx:include fx:id="sidebar" source="side-menu-view.fxml" />
    </left>

    <center>
        <AnchorPane prefHeight="800.0" prefWidth="700.0" BorderPane.alignment="CENTER">
            <children>
                <!-- Formulario de entrada organizado verticalmente -->
                <VBox layoutX="14.0" layoutY="120.0" spacing="15.0" prefWidth="300.0">
                    <children>
                        <!-- Campo SKU -->
                        <VBox spacing="5.0">
                            <children>
                                <Label text="SKU" textFill="WHITE">
                                    <font>
                                        <Font name="System Bold" size="12.0" />
                                    </font>
                                </Label>
                                <TextField fx:id="txtSku" prefHeight="38.0" prefWidth="260.0"
                                           promptText="SKU" />
                            </children>
                        </VBox>

                        <!-- Campo Nombre -->
                        <VBox spacing="5.0">
                            <children>
                                <Label text="Nombre Producto" textFill="WHITE">
                                    <font>
                                        <Font name="System Bold" size="12.0" />
                                    </font>
                                </Label>
                                <TextField fx:id="txtNombre" prefHeight="38.0" prefWidth="260.0"
                                           promptText="Nombre producto" />
                            </children>
                        </VBox>

                        <!-- Campo Stock -->
                        <VBox spacing="5.0">
                            <children>
                                <Label text="Stock" textFill="WHITE">
                                    <font>
                                        <Font name="System Bold" size="12.0" />
                                    </font>
                                </Label>
                                <TextField fx:id="txtStock" prefHeight="38.0" prefWidth="260.0"
                                           promptText="Stock" />
                            </children>
                        </VBox>

                        <!-- Campo Precio -->
                        <VBox spacing="5.0">
                            <children>
                                <Label text="Precio" textFill="WHITE">
                                    <font>
                                        <Font name="System Bold" size="12.0" />
                                    </font>
                                </Label>
                                <TextField fx:id="txtPrecio" prefHeight="38.0" prefWidth="260.0"
                                           promptText="Precio" />
                            </children>
                        </VBox>

                        <!-- Campo Categorías -->
                        <VBox spacing="5.0">
                            <children>
                                <Label text="Categorías" textFill="WHITE">
                                    <font>
                                        <Font name="System Bold" size="12.0" />
                                    </font>
                                </Label>
                                <ComboBox fx:id="menuCategorias" prefHeight="38.0" prefWidth="260.0"
                                          promptText="Seleccione categoría" styleClass="combo-field">
                                    <items>
                                        <FXCollections fx:factory="observableArrayList">
                                            <String fx:value="Categoría 1" />
                                            <String fx:value="Categoría 2" />
                                        </FXCollections>
                                    </items>
                                </ComboBox>
                            </children>
                        </VBox>

                        <!-- Campo Estado -->
                        <VBox spacing="5.0">
                            <children>
                                <Label text="Estado" textFill="WHITE">
                                    <font>
                                        <Font name="System Bold" size="12.0" />
                                    </font>
                                </Label>
                                <ComboBox fx:id="menuEstado" prefHeight="38.0" prefWidth="260.0"
                                          promptText="Seleccione estado" styleClass="combo-field">
                                    <items>
                                        <FXCollections fx:factory="observableArrayList">
                                            <String fx:value="Activo" />
                                            <String fx:value="Inactivo" />
                                        </FXCollections>
                                    </items>
                                </ComboBox>
                            </children>
                        </VBox>

                        <!-- Campo Proveedor -->
                        <VBox spacing="5.0">
                            <children>
                                <Label text="Proveedor" textFill="WHITE">
                                    <font>
                                        <Font name="System Bold" size="12.0" />
                                    </font>
                                </Label>
                                <ComboBox fx:id="menuProveedor" prefHeight="38.0" prefWidth="260.0"
                                          promptText="Seleccione proveedor" styleClass="combo-field">
                                    <items>
                                        <FXCollections fx:factory="observableArrayList">
                                            <String fx:value="Proveedor 1" />
                                            <String fx:value="Proveedor 2" />
                                        </FXCollections>
                                    </items>
                                </ComboBox>
                            </children>
                        </VBox>
                    </children>
                </VBox>

                <!-- Botones organizados en filas -->
                <VBox layoutX="14.0" layoutY="700.0" spacing="10.0" prefWidth="300.0">
                    <children>
                        <!-- Primera fila de botones -->
                        <HBox spacing="15.0">
                            <children>
                                <Button fx:id="agregar" prefHeight="46.0" prefWidth="130.0"
                                        text="Agregar" styleClass="button-primary" />
                                <Button fx:id="ver" prefHeight="46.0" prefWidth="130.0"
                                        text="Modificar" styleClass="button-modify" />
                            </children>
                        </HBox>

                        <!-- Segunda fila de botones -->
                        <HBox spacing="15.0">
                            <children>
                                <Button fx:id="actualizar" prefHeight="46.0" prefWidth="130.0"
                                        text="Actualizar" styleClass="button-secondary" />
                                <Button fx:id="desactivar" prefHeight="46.0" prefWidth="130.0"
                                        text="Desactivar" styleClass="button-danger" />
                            </children>
                        </HBox>
                        <!-- Tercer fila de botones -->
                        <HBox spacing="15.0" alignment="CENTER">
                            <children>
                                <Button fx:id="categorias" prefHeight="46.0" prefWidth="130.0"
                                        text="Categorias" styleClass="button-categoria"  />
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </AnchorPane>
    </center>

    <right>
        <AnchorPane prefHeight="900.0" prefWidth="900.0" BorderPane.alignment="CENTER">
            <children>
                <!-- Campo de búsqueda -->
                <TextField fx:id="txtBuscarProducto" layoutX="10.0" layoutY="14.0"
                           prefHeight="38.0" prefWidth="680.0"
                           promptText="Buscar Producto..." />

                <!-- Tabla de productos -->
                <TableView fx:id="tablaProductos" layoutX="10.0" layoutY="66.0"
                           prefHeight="720.0" prefWidth="830.0">
                    <columns>
                        <TableColumn fx:id="skuColumn" prefWidth="140.0" text="SKU" />
                        <TableColumn fx:id="nombreColumn" prefWidth="262.0" text="PRODUCTO" />
                        <TableColumn fx:id="stockColumn" prefWidth="83.0" text="STOCK" />
                        <TableColumn fx:id="precioColumn" prefWidth="89.0" text="PRECIO" />
                        <TableColumn fx:id="estadoColumn" prefWidth="80" text="ESTADO" />
                        <TableColumn fx:id="proveedorColumn" prefWidth="176.0" text="PROVEEDORES" />
                    </columns>
                </TableView>
            </children>
        </AnchorPane>
    </right>

    <stylesheets>
        <URL value="@estilos/estilos-globales.css" />
        <URL value="@estilos/tabla.css" />
    </stylesheets>
</BorderPane>